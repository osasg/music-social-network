<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= render 'follows/form', user: user %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

