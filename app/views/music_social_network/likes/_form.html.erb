<% if current_user.liked? likeable %>
  <%= form_tag unlike_path(likeable_type: likeable.class.to_s, likeable_id: likeable[:id]), method: :post, remote: true, class: "form-check form-check-inline likeable-form-#{likeable[:id]}" do %>
    <% button_tag class: "btn btn-info likeable-btn-#{likeable[:id]}" do %>
      Unlike
    <% end %>
  <% end %>
<% else %>
  <%= form_tag like_path(likeable_type: likeable.class.to_s, likeable_id: likeable[:id]), remote: true, class: "form-check form-check-inline likeable-form-#{likeable[:id]}" do %>
    <% button_tag class: "btn btn-success likeable-btn-#{likeable[:id]}" do %>
      Like
    <% end %>
  <% end %>
<% end %>
