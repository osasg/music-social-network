<h1 class="alert alert-info text-center">Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= render 'music_social_network/follows/form', user: user %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

